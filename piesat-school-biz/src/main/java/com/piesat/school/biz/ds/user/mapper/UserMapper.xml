<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.piesat.school.biz.ds.user.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.piesat.school.biz.ds.user.entity.User">
        <result column="name" property="name" />
        <result column="phone" property="phone" />
        <result column="email" property="email" />
        <result column="password" property="password" />
        <result column="work_unit" property="workUnit" />
        <result column="unit_address" property="unitAddress" />
        <result column="high_education" property="highEducation" />
        <result column="profession" property="profession" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="is_data_upload" property="isDataUpload" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        name, phone, email, password, work_unit, unit_address, high_education, profession, created_at, updated_at, is_data_upload, status
    </sql>
    <select id="getUser" resultType="com.piesat.school.biz.ds.user.entity.User" >
        select * from t_user where id = 1;
    </select>

</mapper>
